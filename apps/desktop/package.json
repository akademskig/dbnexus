{
    "name": "@dbnexus/desktop",
    "version": "0.1.0",
    "private": true,
    "description": "DB Nexus Desktop Application",
    "author": "DB Nexus Team",
    "license": "MIT",
    "main": "dist/main.js",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "start": "electron .",
        "dev": "tsc && electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "dist:win": "electron-builder --win",
        "dist:mac": "electron-builder --mac",
        "dist:linux": "electron-builder --linux",
        "clean": "rm -rf dist out"
    },
    "dependencies": {
        "@dbnexus/api": "workspace:*"
    },
    "devDependencies": {
        "@types/node": "^22.10.2",
        "electron": "^33.2.0",
        "electron-builder": "^25.1.8",
        "typescript": "^5.3.3"
    },
    "build": {
        "appId": "com.dbnexus.app",
        "productName": "DB Nexus",
        "copyright": "Copyright Â© 2024 DB Nexus",
        "directories": {
            "output": "out",
            "buildResources": "resources"
        },
        "files": [
            "dist/**/*",
            "node_modules/**/*",
            "!node_modules/**/node_modules/**/*"
        ],
        "extraResources": [
            {
                "from": "../api/dist",
                "to": "api",
                "filter": ["**/*"]
            },
            {
                "from": "../web/dist",
                "to": "web",
                "filter": ["**/*"]
            },
            {
                "from": "../../packages/shared/dist",
                "to": "packages/shared",
                "filter": ["**/*"]
            },
            {
                "from": "../../packages/connectors/dist",
                "to": "packages/connectors",
                "filter": ["**/*"]
            },
            {
                "from": "../../packages/metadata/dist",
                "to": "packages/metadata",
                "filter": ["**/*"]
            }
        ],
        "mac": {
            "category": "public.app-category.developer-tools",
            "icon": "resources/icon.icns",
            "target": [
                {
                    "target": "dmg",
                    "arch": ["x64", "arm64"]
                },
                {
                    "target": "zip",
                    "arch": ["x64", "arm64"]
                }
            ]
        },
        "win": {
            "icon": "resources/icon.ico",
            "target": [
                {
                    "target": "nsis",
                    "arch": ["x64"]
                },
                {
                    "target": "portable",
                    "arch": ["x64"]
                }
            ]
        },
        "linux": {
            "icon": "resources/icon.png",
            "category": "Development",
            "target": [
                {
                    "target": "AppImage",
                    "arch": ["x64"]
                },
                {
                    "target": "deb",
                    "arch": ["x64"]
                },
                {
                    "target": "rpm",
                    "arch": ["x64"]
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true
        }
    }
}
