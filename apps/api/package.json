{
    "name": "@dbnexus/api",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "nest build",
        "start": "nest start",
        "dev": "nest start --watch",
        "start:dev": "nest start --watch",
        "start:prod": "node dist/main.js",
        "test": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs",
        "test:unit": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.config.cjs --testPathIgnorePatterns=integration",
        "test:integration": "NODE_OPTIONS='--experimental-vm-modules' jest --config jest.integration.config.cjs",
        "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch --config jest.config.cjs",
        "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage --config jest.config.cjs",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@dbnexus/connectors": "workspace:*",
        "@dbnexus/metadata": "workspace:*",
        "@dbnexus/shared": "workspace:*",
        "@nestjs/common": "^10.4.15",
        "@nestjs/core": "^10.4.15",
        "@nestjs/platform-express": "^10.4.15",
        "@nestjs/serve-static": "^4.0.2",
        "reflect-metadata": "^0.2.2",
        "rxjs": "^7.8.1"
    },
    "devDependencies": {
        "@jest/globals": "^30.2.0",
        "@nestjs/cli": "^10.4.9",
        "@nestjs/testing": "^10.4.15",
        "@types/jest": "^29.5.12",
        "@types/node": "^22.10.2",
        "jest": "^29.7.0",
        "ts-jest": "^29.1.2",
        "typescript": "^5.3.3"
    }
}
