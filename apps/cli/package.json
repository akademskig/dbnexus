    "commander": "^12.1.0",
    "dotenv": "^17.2.4",
    "js-yaml": "^4.1.1",
    "open": "^10.1.0",
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.19.5",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3",
    "vitest": "^1.3.1"
  }
}
