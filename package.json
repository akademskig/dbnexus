{
    "name": "dbnexus",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "description": "A local-first, Prisma-like CLI tool for database management with web UI",
    "author": "",
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0"
    },
    "packageManager": "pnpm@9.15.0",
    "scripts": {
        "build": "pnpm -r build",
        "dev": "pnpm -r --parallel dev",
        "test": "pnpm -r test:run",
        "test:web": "pnpm --filter @dbnexus/web test",
        "test:api": "pnpm --filter @dbnexus/api test",
        "test:coverage": "pnpm -r test:coverage",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "check": "pnpm lint && pnpm format:check && pnpm build",
        "clean": "pnpm -r clean && rm -rf node_modules",
        "docker:build": "docker build -t dbnexus:latest .",
        "docker:run": "docker run -p 3001:3001 -v dbnexus-data:/app/data dbnexus:latest",
        "docker:compose": "docker-compose -f docker-compose.prod.yml up -d",
        "desktop:dev": "pnpm --filter @dbnexus/desktop dev",
        "desktop:build": "pnpm build && pnpm --filter @dbnexus/desktop dist",
        "desktop:build:win": "pnpm build && pnpm --filter @dbnexus/desktop dist:win",
        "desktop:build:mac": "pnpm build && pnpm --filter @dbnexus/desktop dist:mac",
        "desktop:build:linux": "pnpm build && pnpm --filter @dbnexus/desktop dist:linux"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^8.19.0",
        "@typescript-eslint/parser": "^8.19.0",
        "eslint": "^9.17.0",
        "eslint-config-prettier": "^9.1.0",
        "eslint-plugin-react": "^7.37.3",
        "eslint-plugin-react-hooks": "^5.1.0",
        "globals": "^15.14.0",
        "prettier": "^3.4.2",
        "typescript-eslint": "^8.19.0"
    }
}
